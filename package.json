{
  "name": "tailwind_play",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "pnpm typeCheck && pnpm eslint && pnpm stylelint && pnpm vitest",
    "prepare": "husky",
    "build": "next build",
    "build:clean": "rm -rf dist",
    "clean": "rm -rf node_modules dist coverage",
    "prepublishOnly": "pnpm test  && pnpm build",
    "typeCheck": "tsc --noEmit",
    "eslint": "eslint --config build-tools/.eslintrc.js --ext .ts,.tsx,.js,.jsx src/ tests/",
    "lintStaged": "lint-staged --config build-tools/.lint-staged.config.js",
    "vitest": "vitest --config build-tools/vitest.config.mts run --coverage",
    "vitest:dev": "vitest --config build-tools/vitest.config.mts dev",
    "stylelint": "stylelint --config build-tools/.stylelint.config.ts src/**/*.{scss,css}",
    "test:e2e": "playwright test --config build-tools/playwright.config.ts",
    "test:e2e:dev": "playwright test --config build-tools/playwright.config.ts --ui",
    "dev": "next dev",
    "start": "next start"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.1.0",
